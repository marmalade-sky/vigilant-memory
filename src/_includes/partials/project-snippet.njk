<div class="space-y-4">
  {% if project.data.notready == true %}
    <img src="{{imgSrc}}/{{project.data.mainImg}}" class="w-full rounded shadow-lg" alt="{{project.data.mainImageAlt}}" />
  {% else %}
  <a href="{{project.url}}">
    <img src="{{imgSrc}}/{{project.data.mainImg}}" class="w-full rounded shadow-lg" alt="{{project.data.mainImageAlt}}" />
  </a>
  {% endif %}
  {% if (project.data.featured == true) %}
    <div class="flex flex-wrap gap-3">
      {% for role in project.data.roles %}
        <span class="text-xs uppercase text-slate-500 xl:py-2 xl:px-4 xl:bg-slate-200 xl:rounded">#{{role}}</span>
      {% endfor %}     
    </div>
  {% endif %}
  <div class="space-y-1">
    {% if project.data.notready == true %}
      <h3 class="text-2xl font-semibold line-clamp-1">
        {{project.data.title}}
      </h3>
    {% else %}
      <h3 class="text-2xl font-semibold">
        <a href="{{project.url}}">
          {{project.data.title}}
        </a>
      </h3>
    {% endif %}
    <p class="text-base line-clamp-4">
      {{project.data.description}}
    </p>
  </div>
  {% if project.data.notready == true %}
    <p class="text-sm text-slate-500 font-bold uppercase tracking-widest">Coming Soon</p>
  {% else %}
    <a href="{{project.url}}" class="flex items-center space-x-2 text-pink-500 group">
      <svg class="h-4 w-4 ease-in-out duration-300 group-hover:translate-x-1" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
      <span class="text-sm font-bold uppercase tracking-widest">View Project</span>
    </a>
  {% endif %}
  
</div>