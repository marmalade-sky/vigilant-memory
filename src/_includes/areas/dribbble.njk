<h2 class="text-4xl text-adorn-1 mb-6">Concepts &amp; Illustration</h2>
<div class="grid grid-cols-2 md:grid-cols-3 xl:grid-cols-4 xl:grid-cols-4 gap-6">
  {% for shot in dribbble %}
    <div class="space-y-4">
      <a href="{{shot.html_url}}" target="_blank">
        <img src="{{shot.images.normal}}" alt="shot.title" class="w-full rounded shadow-lg" />
      </a>
      <h3 class="text-xl font-semibold line-clamp-1">
        <a href="{{shot.html_url}}" target="_blank">
          {{shot.title}}
        </a>
      </h3>
      <div class="line-clamp-3">
        {{ shot.description | safe }}
      </div>
      <a href="{{shot.html_url}}" class="flex items-center space-x-2 text-pink-500 group" target="_blank">
        <svg class="h-4 w-4 ease-in-out duration-300 group-hover:translate-x-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
        <span class="text-xs font-bold uppercase tracking-widest">View on Dribbble</span>
      </a>
    </div>
  {% endfor %}
</div>