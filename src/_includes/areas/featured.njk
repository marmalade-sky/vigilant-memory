<h2 class="text-4xl text-adorn-2 mb-6">Featured Projects</h2>
<div class="grid grid-cols-1 lg:grid-cols-2 gap-14">
  {% for project in collections.featured %}
    <div class="space-y-4">
    <img src="{{project.data.mainImage}}" class="w-full rounded" alt="{{project.data.mainImageAlt}}" />
    <div class="flex flex-wrap gap-3">
      {% for role in project.data.roles %}
        <span class="text-xs uppercase text-slate-500 py-2 px-4 bg-slate-200 rounded">{{role}}</span>
      {% endfor %}     
    </div>
    <div class="space-y-1">
      <h3 class="text-2xl font-semibold">{{project.data.title}}</h3>
      <p class="text-base">{{project.data.teaser}}</p>
    </div>
    <a href="{{project.url}}" class="flex items-center space-x-2 text-pink-500 group">
      <svg class="h-4 w-4 ease-in-out duration-300 group-hover:translate-x-1" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
      </svg>
      <span class="text-sm font-bold uppercase tracking-widest">View Project</span>
    </a>
  </div>
  {% endfor %}
</div>