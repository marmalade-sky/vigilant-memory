<h2 class="text-4xl text-adorn-3 mb-6 md:mb-12">Skills &amp; Experience</h2>
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 md:gap-12">
  {% for skill in static.skills %}
    <div class="space-y-7 border-b border-slate-200 border-solid last:border-none pb-7 last:pb-0 md:border-none md:pb-0">
      <div class="space-y-2">
        <h3 class="text-2xl">
          {{skill.name}}
        </h3>
        <p class="text-base md:line-clamp-4 xl:line-clamp-none">
          {{skill.description}}
        </p>
      </div>
      <div class="space-y-2">
        <h4 class="text-xl">
          {{skill.heading}}
        </h4>
        <ul class="md:space-y-1">
          {% for item in skill.list %}
            <li class="text-base md:text-sm">
              {{item}}
            </li>
          {% endfor %}
        </ul>
      </div>
      <div class="space-y-2">
        <h5 class="text-lg">
          Tools
        </h5>
        <div class="flex items-bottom gap-3">
          {% for item in skill.icons %}
            <img src="{{iconSrc}}/tools/{{item.icon}}" alt="{{item.name}}" title="{{item.name}}" class="h-9 md:h-7 lg:h-6">
          {% endfor %}
        </div>
      </div>
    </div>
  {% endfor %}
</div>