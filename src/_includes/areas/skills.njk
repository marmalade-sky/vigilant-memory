<h2 class="text-4xl text-adorn-3 mb-12">Skills &amp; Experience</h2>
<div class="grid grid-cols-3 gap-12">
  {% for skill in static.skills %}
    <div class="space-y-7">
      <div class="space-y-2">
        <h3 class="text-2xl">
          {{skill.name}}
        </h3>
        <p class="text-base">
          {{skill.description}}
        </p>
      </div>
      <div class="space-y-2">
        <h4 class="text-xl">
          {{skill.heading}}
        </h4>
        <ul class="space-y-1">
          {% for item in skill.list %}
            <li class="text-sm">
              {{item}}
            </li>
          {% endfor %}
        </ul>
      </div>
      <div class="space-y-2">
        <h5 class="text-lg">
          Tools
        </h5>
        <div class="flex items-bottom gap-4">
          {% for item in skill.icons %}
            <img src="{{iconSrc}}/tools/{{item.icon}}" alt="{{item.name}}" title="{{item.name}}" class="h-6">
          {% endfor %}
        </div>
      </div>
    </div>
  {% endfor %}
</div>