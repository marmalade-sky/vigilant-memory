{
  "name": "vigilant-memory",
  "version": "1.0.0",
  "description": "Portfolio Site (SSG)",
  "main": "index.js",
  "scripts": {
    "watch:eleventy": "eleventy --serve",
    "watch:sass": "sass src/scss:public/css --watch",
    "watch:tailwindcss": "tailwindcss -i src/vendors/tailwindcss/tailwind.css -c src/vendors/tailwindcss/tailwind.config.js -o public/css/tailwind.css --watch",
    "watch:postcss": "postcss --use autoprefixer cssnano --dir public/css public/css/*.css --map --watch",
    "build:eleventy": "eleventy",
    "build:sass": "sass src/scss:public/css",
    "start": "npm-run-all --parallel watch:*",
    "build": "npm-run-all --parallel build:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marmalade-sky/vigilant-memory.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/marmalade-sky/vigilant-memory/issues"
  },
  "homepage": "https://github.com/marmalade-sky/vigilant-memory#readme",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "autoprefixer": "^10.4.7",
    "concat": "^1.0.3",
    "cssnano": "^5.1.9",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-cli": "^9.1.0",
    "tailwindcss": "^3.0.24"
  },
  "dependencies": {
    "sass": "^1.51.0"
  }
}
